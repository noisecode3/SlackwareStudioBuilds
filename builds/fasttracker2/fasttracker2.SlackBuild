cd $(dirname $0) ; CWD=$(pwd)

PRGNAM=fasttracker2
VERSION=${VERSION:-git}
BUILD=${BUILD:-1}
TAG=${TAG:-_SSb}
PKGTYPE=${PKGTYPE:-tgz}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i586 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

TMP=${TMP:-/tmp/SSb}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ ! -z "${PRINT_PACKAGE_NAME}" ]; then
  mkdir -p $TMP
  cd $TMP
  rm -rf ft2-clone
  git clone https://github.com/8bitbubsy/ft2-clone
  cd ft2-clone
  VERSION=$(git describe --tags)
  VERSION=$(echo $VERSION | tr -d 'v')
  echo "$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE"
  exit 0
fi

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT $PKG
cd $TMP
rm -rf ft2-clone
if [ "$VERSION" != "git" ]; then
  git clone --depth 1 -b $VERSION https://github.com/8bitbubsy/ft2-clone
else
  git clone https://github.com/8bitbubsy/ft2-clone
fi
cd ft2-clone
VERSION=$(git describe --tags)
VERSION=$(echo $VERSION | tr -d 'v')
chown -R root:root .
find -L . \
 \( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 \
  -o -perm 511 \) -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 640 -o -perm 600 -o -perm 444 \
  -o -perm 440 -o -perm 400 \) -exec chmod 644 {} \;

mkdir -p build
cd build
  cmake \
    -DCMAKE_C_FLAGS:STRING="$SLKCFLAGS" \
    -DCMAKE_CXX_FLAGS:STRING="$SLKCFLAGS" \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DEXTERNAL_LIBFLAC=ON ..
  make
  make install/strip DESTDIR=$PKG
cd ..

mkdir -p $PKG/usr/share/icons/hicolor/scalable/apps
install -vDm644 $CWD/fasttracker2.svg $PKG/usr/share/icons/hicolor/scalable/apps
mkdir -p $PKG/usr/share/applications
install -vDm644 $CWD/fasttracker2.desktop $PKG/usr/share/applications
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE
