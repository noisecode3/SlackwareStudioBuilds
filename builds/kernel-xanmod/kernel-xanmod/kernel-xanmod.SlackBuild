cd $(dirname $0) ; CWD=$(pwd)

PRGNAM=kernel-xanmod
VERSION=${VERSION:-5.15.89}
KERNEL=${KERNEL:-xanmod1}
NUMJOBS=${NUMJOBS:-" -j$(expr $(nproc) + 1) "}
BUILD=${BUILD:-1}
TAG=${TAG:-_SSb}
PKGTYPE=${PKGTYPE:-tgz}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i586 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

cd /usr/src/linux-$VERSION-$KERNEL 2> /dev/null
if [ $? != 1 ]; then
  # Sync version to git and applied patches
  if [ -f "localversion-rt" ]; then
    VERSION=$(grep "^VERSION = " Makefile | rev | cut -f 1 -d ' ' | rev).$(grep "^PATCHLEVEL = " Makefile | rev | cut -f 1 -d ' ' | rev).$(grep "^SUBLEVEL = " Makefile | rev | cut -f 1 -d ' ' | rev)$(grep "^EXTRAVERSION = " Makefile | rev | cut -f 1 -d ' ' | rev)$(cat localversion-rt 2> /dev/null)
  elif [ -f "localversion-tt" ]; then
    VERSION=$(grep "^VERSION = " Makefile | rev | cut -f 1 -d ' ' | rev).$(grep "^PATCHLEVEL = " Makefile | rev | cut -f 1 -d ' ' | rev).$(grep "^SUBLEVEL = " Makefile | rev | cut -f 1 -d ' ' | rev)$(grep "^EXTRAVERSION = " Makefile | rev | cut -f 1 -d ' ' | rev)$(cat localversion-tt 2> /dev/null)
  else
    VERSION=$(grep "^VERSION = " Makefile | rev | cut -f 1 -d ' ' | rev).$(grep "^PATCHLEVEL = " Makefile | rev | cut -f 1 -d ' ' | rev).$(grep "^SUBLEVEL = " Makefile | rev | cut -f 1 -d ' ' | rev)$(grep "^EXTRAVERSION = " Makefile | rev | cut -f 1 -d ' ' | rev)
  fi

  if [ -f "localversion-xanmod" ]; then
    KERNEL=$(cat localversion-xanmod 2> /dev/null | sed s/-//g)
  elif [ -f "localversion" ]; then
    KERNEL=$(cat localversion 2> /dev/null | sed s/-//g)
  fi
else
  if [ ! -z "${PRINT_PACKAGE_NAME}" ]; then
    echo "$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE"
    exit 0
  fi
  echo "You seem to be missing the source in /usr/src"
  exit 1
fi

if [ ! -z "${PRINT_PACKAGE_NAME}" ]; then
  echo "$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE"
  exit 0
fi

TMP=${TMP:-/tmp/SSb}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ $ARCH != "x86_64" ]; then
  echo "There is only config file for x86_64 FIXME"
  exit 1
fi

set -e

rm -rf $PKG
mkdir -p $TMP $PKG/boot $PKG/lib/modules $OUTPUT

cd $TMP

rm -rf linux-$VERSION-$KERNEL
cp -a  /usr/src/linux-$VERSION-$KERNEL .
cd linux-$VERSION-$KERNEL

make clean
make prepare
make oldconfig
make $NUMJOBS bzImage || make bzImage || exit 2
echo ""
make $NUMJOBS modules || exit 3
make INSTALL_MOD_PATH=$PKG modules_install || exit 4

cd $PKG/lib/modules/$VERSION-$KERNEL
rm build source
ln -sv /usr/src/linux-$VERSION-$KERNEL build || exit 5
ln -sv /usr/src/linux-$VERSION-$KERNEL source || exit 5

cd $TMP/linux-$VERSION-$KERNEL
depmod -b $PKG -a $VERSION-$KERNEL

cp -v System.map $PKG/boot/System.map-generic-xanmod-$VERSION || exit 3
cp -v .config $PKG/boot/config-generic-xanmod-$VERSION || exit 3
cp -v arch/x86/boot/bzImage $PKG/boot/vmlinuz-generic-xanmod-$VERSION || exit 3

ln -srv $PKG/boot/System.map-generic-xanmod-$VERSION $PKG/boot/System.map-generic-xanmod
ln -srv $PKG/boot/config-generic-xanmod-$VERSION $PKG/boot/config-generic-xanmod
ln -srv $PKG/boot/vmlinuz-generic-xanmod-$VERSION $PKG/boot/vmlinuz-generic-xanmod

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE
