cd $(dirname $0) ; CWD=$(pwd)

PRGNAM=wine-tkg-six-seventeen
VERSION=${VERSION:-1.0}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}
PKGTYPE=${PKGTYPE:-tgz}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i586 ;;
    arm*) ARCH=arm ;;
       *) ARCH=$( uname -m ) ;;
  esac
fi

TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM-$VERSION
OUTPUT=${OUTPUT:-/tmp}

if [ ! -z "${PRINT_PACKAGE_NAME}" ]; then
  echo "$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE"
  exit 0
fi

if [ $ARCH != "x86_64" ]; then
  echo "This script supports x86_64 only  now, "
  exit 1
fi

if [ ! -f /var/log/packages/glibc-[0-9]*_multilib-x86_64-*alien ]; then
    echo "Install glibc-[0-9]*_multilib-x86_64-*alien"
    exit 1
fi

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP

rm -rf wine-tkg-git-6.17.r0.g5f19a815
tar -xf $CWD/wine-tkg-git-6.17.r0.g5f19a815.tar.gz
cd wine-tkg-git-6.17.r0.g5f19a815/wine-tkg-git
rm -rf /tmp/wine-tkg

sed -i '/_nomakepkg_prefix_path=/ s/""/"\/opt"/' ./customization.cfg

sed -i '/_plain_version=/ s/""/"wine-6.17"/' ./customization.cfg
sed -i '/_staging_version=/ s/""/"v6.17"/' ./customization.cfg

sed -i '/_allow_server_rt_prio=/ s/"false"/"true"/' ./wine-tkg-profiles/advanced-customization.cfg

sed -i 's/make install/make install DESTDIR=\/tmp\/SBo\/package-wine-tkg-six-seventeen-1.0/g' ./wine-tkg-scripts/build.sh
sed -i 's/local _prefix="${_nomakepkg_prefix_path}\/${_nomakepkg_pkgname}"/local _prefix="\/tmp\/SBo\/package-wine-tkg-six-seventeen-1.0${_nomakepkg_prefix_path}\/${_nomakepkg_pkgname}"/g' ./wine-tkg-scripts/build.sh

chown -R root:root .
find -L . \
 \( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 \
  -o -perm 511 \) -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 640 -o -perm 600 -o -perm 444 \
  -o -perm 440 -o -perm 400 \) -exec chmod 644 {} \;

./non-makepkg-build.sh || { rm -rf /tmp/wine-tkg; exit 1; }
rm -rf /tmp/wine-tkg

cp $CWD/symlink_usr_bin.sh $PKG/opt/wine-tkg-staging-fsync-git-6.17.r0.g5f19a815
mkdir -p $PKG/usr/share/applications
cp $CWD/wine-tkg-6.17.desktop $PKG/usr/share/applications

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE
